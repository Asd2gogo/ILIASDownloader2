<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>ILIASDownloader</artifactId>
    <groupId>de.whiledo</groupId>
    <version>0.0.12-RELEASE</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>ILIASDownloader-SyncRunner</artifactId>
  <name>ILIASDownloader2</name>
  <description>Sync module to download files from the ILIAS platform.</description>
  <url>https://github.com/kekru/ILIASDownloader2/ILIASDownloader-SyncRunner</url>
  <inceptionYear>2016</inceptionYear>
  <developers>
    <developer>
      <id>kekru</id>
      <name>Kevin Krummenauer</name>
      <email>kevin@whiledo.de</email>
      <url>http://whiledo.de</url>
      <roles>
        <role>architect</role>
        <role>developer</role>
      </roles>
      <timezone>Europe/Berlin</timezone>
      <properties>
        <picUrl>https://github.com/kekru</picUrl>
      </properties>
    </developer>
  </developers>
  <licenses>
    <license>
      <name>GNU GENERAL PUBLIC LICENSE Version 3, 29 June 2007</name>
      <url>https://github.com/kekru/ILIASDownloader2/blob/master/LICENSE</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <organization>
    <name>Kevin Krummenauer</name>
    <url>http://whiledo.de</url>
  </organization>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.3.2</version>
        <configuration>
          <source>1.7</source>
          <target>1.7</target>
          <encoding>UTF-8</encoding>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>build-runnable-syncrunner</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-shade-plugin</artifactId>
            <version>2.4.3</version>
            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>shade</goal>
                </goals>
                <configuration>
                  <transformers>
                    <transformer>
                      <mainClass>de.whiledo.iliasdownloader2.syncrunner.service.StartSyncRunner</mainClass>
                    </transformer>
                  </transformers>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.10</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>hamcrest-core</artifactId>
          <groupId>org.hamcrest</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
</project>

